{
  "manifest_version": 3,
  "name": "大厂乐乎 Copilot Sidebar",
  "version": "0.2.0",
  "description": "在浏览器侧边栏中使用大厂乐乎（OpenWebUI），支持分屏、历史对话和页面抓取。",
  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://r.jina.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "OpenWebUI Copilot"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "minimum_chrome_version": "114"
}
